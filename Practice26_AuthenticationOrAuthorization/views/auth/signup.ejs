<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Airbnb Sign Up</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">
    <%- include('./../Partials/Header.ejs') %>
  <div class="max-w-md mx-auto mt-10 bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold mb-4 text-center">Sign Up to Airbnb</h2>

    <% if (typeof errorMessage !== 'undefined') { %>
      <div class="text-red-500 text-sm mb-4"><%= errorMessage %></div>
    <% } %>

    <form action="/signup" method="POST" class="space-y-4">
      <!-- First Name -->
      <div>
        <label class="block text-gray-700">First Name *</label>
        <input type="text" name="firstName" required class="w-full px-3 py-2 border rounded-md">
      </div>

      <!-- Last Name (optional) -->
      <div>
        <label class="block text-gray-700">Last Name</label>
        <input type="text" name="lastName" class="w-full px-3 py-2 border rounded-md">
      </div>
<!-- email -->
      <div>
        <label class="block text-gray-700" htmlFor="email">Email </label>
        <input type="email" name="email" required class="w-full px-3 py-2 border rounded-md">
      </div>


      <!-- Password -->
      <div>
        <label class="block text-gray-700">Password *</label>
        <input type="password" name="password" required class="w-full px-3 py-2 border rounded-md">
      </div>

      <!-- Confirm Password -->
      <div>
        <label class="block text-gray-700">Confirm Password *</label>
        <input type="password" name="confirmPassword" required class="w-full px-3 py-2 border rounded-md">
      </div>

      <!-- User Type (radio) -->
      <div>
        <label class="block text-gray-700 mb-1">User Type *</label>
        <div class="flex items-center space-x-4">
          <label>
            <input type="radio" name="userType" value="host" required class="mr-1">
            Host
          </label>
          <label>
            <input type="radio" name="userType" value="guest" required class="mr-1">
            Guest
          </label>
        </div>
      </div>

      <!-- Agree to Terms (checkbox) -->
      <div class="flex items-center">
        <input type="checkbox" name="agree" value="true" required class="mr-2">
        <label class="text-gray-700 text-sm">I agree to the Terms and Conditions *</label>
      </div>

      <!-- Submit Button -->
      <div>
        <button type="submit" class="w-full bg-red-500 text-white py-2 rounded hover:bg-red-600">Sign Up</button>
      </div>
    </form>
  </div>
</body>
</html>
