<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Airbnb Clone</title>
  <link rel="stylesheet" href="output.css" />
</head>
<body class="bg-gray-100 font-sans">
  <%- include('./../Partials/Header.ejs') %>

  <div class="min-h-screen flex items-center justify-center bg-gray-100 py-10">
    <div class="w-[90%] max-w-6xl p-6 bg-white shadow-xl rounded-lg">
      <h1 class="text-4xl font-extrabold text-red-500 text-center mb-8">
        Favourites homes
      </h1>
  
      <!-- Card Grid Start -->
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <% fvtHomes.forEach((data) => { %>
          <div class="bg-gray-50 border border-gray-200 p-4 rounded-xl shadow-sm hover:shadow-lg transition duration-300">
            <img src="<%= data.img %>" alt="Home image" class="w-full h-48 object-cover rounded-md mb-4" />
            <h2 class="text-xl font-semibold text-gray-800 mb-2">
              <%= data.name %>
            </h2>
            <p class="text-gray-600 mb-1">
              <span class="font-medium text-gray-700">Email:</span> <%= data.email %>
            </p>
            <p class="text-gray-600">
              <span class="font-medium text-gray-700">Home:</span> <%= data.home %>
            </p>
            <p class="text-gray-600">
              <span class="font-medium text-gray-700">Description:</span> <%= data.description %>
            </p>
            <br>
            <form action="/favourites/delete/<%= data.id %>" method="post">
              <button type="submit" class="p-2 w-28 mt-3 text-white rounded-md bg-red-500">
                Remove
              </button>
            </form>
            
          </div>
        <% }) %>
      </div>
    </div>
  </div>
  

</body>
</html>
